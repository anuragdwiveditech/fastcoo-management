<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <!-- Fastcoo Settings Table -->
    <table name="fastcoo_settings" resource="default" engine="innodb" comment="Fastcoo Settings">
        <column xsi:type="int" name="settings_id" nullable="false" identity="true" unsigned="true" comment="ID"/>
        <column xsi:type="varchar" name="endpoint_url" nullable="true" length="255" comment="Endpoint URL"/>
        <column xsi:type="varchar" name="customer_id" nullable="true" length="255" comment="Customer ID"/>
        <column xsi:type="varchar" name="secret_key" nullable="true" length="255" comment="Secret Key"/>
        <column xsi:type="varchar" name="system_type" nullable="true" length="10" comment="System Type"/>
        <column xsi:type="smallint" name="status" nullable="false" default="1" comment="Status (0=Disabled, 1=Enabled)"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="settings_id"/>
        </constraint>
    </table>

    <!-- Fastcoo Orders Table -->
    <table name="fastcoo_orders" resource="default" engine="innodb" comment="Fastcoo Orders">
        <column xsi:type="int" name="id" nullable="false" identity="true" unsigned="true" comment="ID"/>
        <column xsi:type="int" name="order_id" nullable="false" unsigned="true" comment="Order ID"/>
        <column xsi:type="varchar" name="awb_no" nullable="false" length="255" comment="AWB Number"/>
        <column xsi:type="datetime" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Created At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <index referenceId="FASTCOO_ORDERS_ORDER_ID" indexType="btree">
            <column name="order_id"/>
        </index>
    </table>

</schema>
