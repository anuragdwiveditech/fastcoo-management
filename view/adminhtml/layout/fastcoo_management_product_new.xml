<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- try overriding both common block names -->
        <referenceBlock name="product_edit_form" remove="false">
            <action method="setData">
                <argument name="key" xsi:type="string">action</argument>
                <argument name="value" xsi:type="string">fastcoo/management/product/save</argument>
            </action>
        </referenceBlock>

        <referenceBlock name="product_form" remove="false">
            <arguments>
                <argument name="action" xsi:type="string">fastcoo/management/product/save</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
